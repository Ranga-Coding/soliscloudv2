          "sm": 6
        },
        "enableInverterDetailList": {
          "type": "checkbox",
          "label": "Enable inverterDetailList (batch)",
          "sm": 6
        },
        "enableInverterMonth": {
          "type": "checkbox",
          "label": "Enable inverterMonth",
          "sm": 6
        },
        "enableInverterYear": {
          "type": "checkbox",
          "label": "Enable inverterYear",
          "sm": 6
        },
        "enableEpmList": {
          "type": "checkbox",
          "label": "Enable epmList",
          "sm": 6
        },
        "enableEpmDetail": {
          "type": "checkbox",
          "label": "Enable epmDetail",
          "sm": 6
        },
        "enableEpmDay": {
          "type": "checkbox",
