          "sm": 6
        },
        "enableCollectorDetail": {
          "type": "checkbox",
          "label": "Enable collectorDetail",
          "sm": 6
        },
        "enableCollectorSignal": {
          "type": "checkbox",
          "label": "Enable collector/signal",
          "sm": 6
        },
        "enableCollectorDay": {
          "type": "checkbox",
          "label": "Enable collector/day",
          "sm": 6
        },
        "enableWeatherList": {
          "type": "checkbox",
